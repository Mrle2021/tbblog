/* 封面卡片样式 */
.posts-expand .post
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06)
  border-radius: 12px
  padding: 24px
  margin-bottom: 30px
  background: #fff
  transition: box-shadow 0.3s ease

.posts-expand .post:hover
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12)

/* 封面图片圆角 */
.posts-expand .post .post-cover
  border-radius: 10px
  overflow: hidden
  margin-bottom: 16px
  max-height: 240px
  object-fit: cover

/* 摘要居中 */
.posts-expand .post .post-excerpt
  text-align: center
  font-size: 16px
  line-height: 1.8
  margin: 16px auto
  color: #555

/* 首页标题居中 */
.posts-expand .post-title
  text-align: center
  font-size: 1.6em
  margin-bottom: 8px

/* 阅读时间图标微调 */
.post-meta .post-meta-item .fa-clock
  margin-right: 4px